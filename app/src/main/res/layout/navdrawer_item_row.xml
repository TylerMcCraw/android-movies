<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:padding="@dimen/navdrawer_item_padding" >

    <ImageView
        android:id="@+id/navdrawer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="@dimen/navdrawer_item_image_paddingstart"
        android:paddingEnd="@dimen/navdrawer_item_image_paddingend"
        android:contentDescription="@string/nav_drawer"/>

    <TextView
        android:id="@+id/navdrawer_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/navdrawer_item_icon"
        android:paddingStart="@dimen/navdrawer_item_text_paddingstart"
        android:paddingEnd="@dimen/navdrawer_item_text_paddingend"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/white" />
</RelativeLayout>